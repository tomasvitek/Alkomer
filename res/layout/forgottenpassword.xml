<TableLayout android:id="@+id/TableLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:stretchColumns="1" xmlns:android="http://schemas.android.com/apk/res/android">
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@+id/btn1">
		<TableLayout android:id="@+id/TableLayout01"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:stretchColumns="1" xmlns:android="http://schemas.android.com/apk/res/android">

			<TextView android:id="@+id/textView3" android:layout_height="wrap_content"
				android:text="Zapomenuté heslo" android:layout_width="wrap_content"
				android:padding="10sp" android:layout_marginTop="2dp"
				android:gravity="left" android:textSize="20sp"></TextView>

			<!-- <ImageView android:src="@drawable/alkomer" android:layout_width="wrap_content" 
				android:id="@+id/imageView1" android:layout_height="wrap_content"></ImageView> -->

			<TableLayout android:id="@+id/TableLayout01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginLeft="8dip" android:layout_marginRight="8dip"
				android:layout_marginBottom="16dip" android:layout_marginTop="10sp"
				android:stretchColumns="1" android:paddingTop="12dip"
				android:paddingBottom="12dip" android:paddingLeft="8dip"
				android:paddingRight="8dip" android:background="@drawable/boxbackground"
				xmlns:android="http://schemas.android.com/apk/res/android">

				<!-- @drawable/customshape -->

				<TextView android:layout_marginLeft="8dp"
					android:layout_marginRight="8dp" android:textColor="#000000"
					android:id="@+id/textView1" android:layout_height="wrap_content"
					android:text="Zadejte svůj email:" android:textSize="15sp"
					android:layout_width="wrap_content"></TextView>

				<EditText android:layout_marginLeft="8dp"
					android:layout_marginRight="8dp" android:lines="1"
					android:layout_height="wrap_content" android:text="" android:id="@+id/email"
					android:layout_width="fill_parent"></EditText>

				<Button android:id="@+id/regbtn" android:layout_height="wrap_content"
					android:text="Vygenerovat nové heslo" android:layout_marginLeft="48dp"
					android:layout_marginRight="48dp" android:layout_marginTop="16dp"
					android:textSize="25sp" android:layout_width="fill_parent"></Button>


			</TableLayout>
		</TableLayout>

	</ScrollView>
</TableLayout>