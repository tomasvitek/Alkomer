<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:id="@+id/TableLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:stretchColumns="1" xmlns:android="http://schemas.android.com/apk/res/android">
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@+id/btn1">
		<TableLayout android:id="@+id/TableLayout01"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:stretchColumns="1" xmlns:android="http://schemas.android.com/apk/res/android">
			<ImageView android:src="@drawable/alkomer"
				android:layout_width="wrap_content" android:id="@+id/imageView1"
				android:layout_height="wrap_content"></ImageView>

			<TableLayout android:id="@+id/TableLayout01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginLeft="8dip" android:layout_marginRight="8dip"
				android:layout_marginBottom="16dip" android:layout_marginTop="10sp"
				android:stretchColumns="1" android:paddingTop="12dip"
				android:paddingBottom="12dip" android:paddingLeft="8dip"
				android:paddingRight="8dip" android:background="@drawable/boxbackground"
				xmlns:android="http://schemas.android.com/apk/res/android">

				<!-- @drawable/customshape -->

				<TextView android:layout_marginLeft="8dp"
					android:layout_marginRight="8dp" android:textColor="#000000"
					android:id="@+id/textView1" android:layout_height="wrap_content"
					android:text="Email:" android:textSize="15sp" android:layout_width="wrap_content"></TextView>

				<EditText android:layout_marginLeft="8dp"
					android:layout_marginRight="8dp" android:layout_height="wrap_content"
					android:text="" android:id="@+id/email" android:layout_width="fill_parent"
					android:lines="1"></EditText>
				<TextView android:textColor="#000000" android:id="@+id/textView2"
					android:layout_height="wrap_content" android:text="Heslo:"
					android:textSize="15sp" android:layout_marginRight="8dp"
					android:layout_width="wrap_content" android:layout_marginLeft="8dp"></TextView>
				<EditText android:layout_marginLeft="8dp"
					android:layout_marginRight="8dp" android:lines="1"
					android:layout_height="wrap_content" android:password="true"
					android:text="" android:id="@+id/password" android:layout_width="fill_parent"></EditText>


				<Button android:id="@+id/login" android:layout_height="wrap_content"
					android:text="Přihlásit se" android:layout_marginLeft="48dp"
					android:layout_marginRight="48dp" android:layout_marginTop="16dp"
					android:textSize="25sp" android:layout_width="fill_parent"></Button>

				<ImageView xmlns:android="http://schemas.android.com/apk/res/android"
					android:src="@android:drawable/divider_horizontal_textfield"
					android:layout_height="wrap_content" android:scaleType="fitXY"
					android:layout_marginTop="16dp" android:layout_marginLeft="8dp"
					android:layout_marginRight="8dp" android:paddingBottom="2dp"
					android:paddingTop="2dp" android:layout_width="wrap_content" />



				<TextView android:layout_marginTop="8dp" android:textSize="15sp"
					android:id="@+id/registration" android:textColor="#000000"
					android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
					android:layout_marginBottom="8dp" android:gravity="center"
					android:text="Nejsem registrovaný" android:layout_width="wrap_content"
					android:layout_height="wrap_content"></TextView>

				<TextView android:id="@+id/forgottenPassword"
					android:textSize="15sp" android:textColor="#000000"
					android:layout_height="wrap_content" android:layout_marginLeft="8dp"
					android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
					android:gravity="center" android:text="Zapomněl jsem heslo"
					android:layout_width="wrap_content"></TextView>


			</TableLayout>
		</TableLayout>

	</ScrollView>
</TableLayout>